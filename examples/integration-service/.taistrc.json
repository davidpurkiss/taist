{
  "include": ["user-service.js", "*.js"],
  "exclude": ["**/node_modules/**", "**/*.test.js", "run-*.js"],
  "depth": 3,
  "format": "toon",
  "watch": {
    "ignore": [
      "**/node_modules/**",
      "**/.git/**",
      "**/coverage/**",
      "**/dist/**"
    ],
    "delay": 1000
  },
  "output": {
    "abbreviate": true,
    "maxTokens": 5000,
    "truncate": {
      "strings": 50,
      "arrays": 3,
      "objects": 4
    }
  },
  "testPattern": "tests/**/*.test.js"
}
